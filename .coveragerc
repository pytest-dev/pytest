[html]
show_contexts = true
skip_covered = false

[paths]
_site-packages-to-src-mapping =
  src
  */src
  *\src
  */lib/pypy*/site-packages
  */lib/python*/site-packages
  *\Lib\site-packages

[report]
skip_covered = true
show_missing = true
exclude_also =
  \#\s*pragma: no cover
  ^\s*raise NotImplementedError\b
  ^\s*return NotImplemented\b
  ^\s*assert False(,|$)
  ^\s*assert_never\(

  ^\s*if TYPE_CHECKING:
  ^\s*@overload( |$)

  ^\s*@pytest\.mark\.xfail

[run]
branch = true
include =
  src/*
  testing/*
  */lib/python*/site-packages/_pytest/*
  */lib/python*/site-packages/pytest.py
  */pypy*/site-packages/_pytest/*
  */pypy*/site-packages/pytest.py
  *\Lib\site-packages\_pytest\*
  *\Lib\site-packages\pytest.py
parallel = true
